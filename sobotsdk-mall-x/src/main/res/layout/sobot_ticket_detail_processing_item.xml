<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/sobot_tv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sobot_icon_time_selector"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:paddingRight="10dp"
            android:paddingBottom="2dp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/sobot_tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/sobot_tv_icon"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@drawable/sobot_ticket_deal_text_color_selector2"
            android:textSize="14sp"
            tools:text="2018-04-09 18:28:12" />

        <TextView
            android:id="@+id/sobot_tv_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sobot_tv_time"
            android:layout_marginTop="10dp"
            android:background="@drawable/sobot_icon_point_selector"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:paddingRight="10dp"
            android:paddingBottom="2dp" />

        <TextView
            android:id="@+id/sobot_tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sobot_tv_time"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/sobot_tv_icon2"
            android:text="@string/sobot_processing"
            android:textColor="@drawable/sobot_ticket_deal_text_color_selector"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/sobot_ll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sobot_tv_icon2"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/sobot_ticket_deal_line_color_selector"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sobot_tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sobot_tv_status"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/sobot_tv_icon2"
                android:text="@string/customer_service_reply"
                android:textColor="@drawable/sobot_ticket_deal_text_color_selector"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/sobot_tv_content_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sobot_tv_title"
                android:layout_marginLeft="24dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sobot_tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#888888"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/sobot_tv_content_split"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:background="@color/sobot_white"
                     />

                <TextView
                    android:id="@+id/sobot_tv_content_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sobot_tv_title"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:text="@string/sobot_read_all"
                    android:visibility="gone"
                    android:textColor="#45B2E6"
                    android:textSize="14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sobot_attachment_file_layout"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/sobot_layout_attachment_view">


                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>